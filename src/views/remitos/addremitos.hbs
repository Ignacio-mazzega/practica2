<div class="container p-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>REMITO</h2>
                </div>
                <div class="card-body">
                    <form action="/remitos/add" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="numero_remito" placeholder="N° de remito"
                                autofocus>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Cosecha</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">Manual</option>
                                <option value="2">Automática</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <input type="date" class="form-control" name="fecha" placeholder="Fecha">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Variedad</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">Malbec</option>
                                <option value="2">Merlot</option>
                                <option value="3">Sauvignon</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Cuartel</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="1">4</option>
                                <option value="2">5</option>
                                <option value="3">6</option>
                                <option value="1">7</option>
                                <option value="2">8</option>
                                <option value="3">9</option>
                                <option value="3">10</option>
                            </select>
                        </div>
                        <div class="form-group mb-2" id="inputGroupSelect01">
                            <input type="number" class="form-control" name="cantidad" placeholder="Cantidad">
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Camión</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">Ninguno</option>
                                <option value="1">AAA 000</option>
                                <option value="2">JGT 233</option>
                                <option value="2">DFS 555</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Máquina</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">Ninguna</option>
                                <option value="1">4A1850</option>
                                <option value="2">6B3440</option>
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect01">Encargado</label>
                            <select class="form-select" id="inputGroupSelect01">
                                <option selected>Choose...</option>
                                <option value="1">Hugo Mazzega</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <button type="submit" class="btn btn-success">
                                Aceptar Remito
                            </button>
                            <a type="button" class="btn btn-danger" href="/remitos">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>