<div class="container p-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>UVAS</h2>
                </div>
                <div class="card-body">
                    <form action="/uva/add" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="variedad" placeholder="Variedad" autofocus>
                        </div>
                        <div class="form-group mb-2">
                            <input type="number" name="cuartel" class="form-control" placeholder="Cuartel">
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="graduación" placeholder="Graduación">
                        </div>
                        <div class="form-group mb-2">
                            <button type="submit" class="btn btn-success">
                                Agregar Uva
                            </button>
                            <a type="button" class="btn btn-danger" href="/uva">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>