<div class="container p-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2>MÁQUINAS</h2>
                </div>
                <div class="card-body">
                    <form action="/maquina/add" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="numero_serie" placeholder="N° de serie" autofocus>
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" name="marca" class="form-control" placeholder="Marca">
                        </div>
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" name="modelo" placeholder="Modelo">
                        </div>
                        <div class="form-group mb-2">
                            <button type="submit" class="btn btn-success">
                                Agregar Máquina
                            </button>
                            <a type="button" class="btn btn-danger" href="/maquina">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>